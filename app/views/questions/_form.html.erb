<%= render 'layouts/errors' %>

<% form_action = question.persisted? ? question_url(question) : questions_url %>

<form class="question-form" action="<%= form_action %>" method="post">
  <%= auth_token %>

  <% if question.persisted? %>
    <input type="hidden" name="_method" value="patch">
  <% end %>

  <label for="title">Title: </label>
  <input type="text"
         name="question[title]"
         id="title"
         value="<%= question.title %>">

  <textarea name="question[content]"
            placeholder="write here..."><%= question.content %></textarea>

  <input type="submit" value="submit">

</form>
