<%= render 'layouts/errors' %>

<form class="new-user-form form" action="/users" method="post">
  <%= auth_token %>

  <h1>Sign Up!</h1>

  <div class="input">
    <label for="email">Email: </label>
    <input type="email"
           id="email"
           name="user[email]"
           value="<%= @user.email %>">
  </div>

  <div class="input">
    <label for="username">Username: </label>
    <input type="text"
           id="username"
           name="user[username]"
           value="<%= @user.username %>">
  </div>

  <div class="input">
    <label for="password">Password: </label>
    <input type="password"
           id="password"
           name="user[password]"
           value="<%= @user.password %>">
  </div>

  <div class="input">
    <label for="password_confirmation">Confirm Password: </label>
    <input type="password"
           id="password_confirmation"
           name="user[password_confirmation]"
           value="<%= @user.password %>">
  </div>

  <input type="submit" class="submit" value="Sign Up">
</form>
