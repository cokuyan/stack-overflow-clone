<%= render 'layouts/errors' %>

<form class="new-user-form" action="/users" method="post">
  <%= auth_token %>

  <h1>Sign Up!</h1>

  <label for="email">Email: </label>
  <input type="text"
         id="email"
         name="user[email]"
         value="<%= @user.email %>">

  <label for="username">Username: </label>
  <input type="text"
         id="username"
         name="user[username]"
         value="<%= @user.username %>">

  <label for="password">Password: </label>
  <input type="password"
         id="password"
         name="user[password]"
         value="<%= @user.password %>">

  <label for="password_confirmation">Confirm Password: </label>
  <input type="password"
         id="password_confirmation"
         name="user[password_confirmation]"
         value="<%= @user.password %>">

  <input type="submit" value="Sign Up">
</form>
