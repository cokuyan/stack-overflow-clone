<form class="new-user-form form">
  <h1>Sign Up!</h1>

  <div class="input">
    <label for="email">Email: </label>
    <input type="email"
           id="email"
           name="user[email]">
  </div>

  <div class="input">
    <label for="username">Username: </label>
    <input type="text"
           id="username"
           name="user[username]">
  </div>

  <div class="input">
    <label for="password">Password: </label>
    <input type="password"
           id="password"
           name="user[password]">
  </div>

  <div class="input">
    <label for="password_confirmation">Confirm Password: </label>
    <input type="password"
           id="password_confirmation"
           name="user[password_confirmation]">
  </div>

  <input type="submit" class="submit" value="Sign Up">
</form>
