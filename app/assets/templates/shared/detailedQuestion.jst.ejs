<li class="question group" data-id="<%= question.id %>">
  <ul class="question-data">
    <li><%= question.get("vote_count") %> votes</li>
    <li><%= question.get("answers_count") %> answers</li>
    <li><%= question.get("view_count") %> views</li>
  </ul>

  <section class="question-info">
    <a href="#/questions/<%= question.id %>">
      <%= question.escape('title') %>
    </a>

    <span>asked <%= question.get('created_at').toDateString().match(/\s(.*)/)[1] %></span>
    <small class="question-author">by
      <a href="#/users/<%= question.author.id %>">
        <%= question.author.escape("username") %>
      </a>
    </small>

    <ul class="question-tags group">
      <% question.tags().each(function(tag) { %>
        <li>
          <a class="tag-link" href="#/tags/<%= tag.id %>">
            <%= tag.escape("tag_name") %>
          </a>
        </li>
      <% }); %>
    </ul>
  </section>
</li>
